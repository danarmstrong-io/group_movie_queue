<div class="landing-page-container">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="/users/sign_in">
                  <span class="light">Oogway's List</span>
                </a>
            </div>
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">

              <ul class="nav navbar-nav">
                    <li style="position:relative; top:6px;">
                        <a class="page-scroll" href="#download">Sign Up</a>
                    </li>

                </ul>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "navbar-form navbar-left"}) do |f| %>

                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Log in", class: "btn btn-oogway" %>
                  </div>
                <% end %>

            </div>
        </div>
    </nav>
    <header class="intro">
      <div class="intro-sign-up">
          <div class="container">
              <div class="row">
                  <div class="col-md-6 col-md-offset-3 sign-up-form">





  <div ng-app="validation" class="container" ng-controller="RegistrationController as registration">
    <h1>Sign Up!</h1>
    <form name="registrationForm" novalidate 
          ng-submit="registration.submit(registrationForm.$valid)">
       <div class="form-group">
            <label>Email</label>
            <input type="text" name="email" class="form-control" ng-model="registration.user.email" required ng-blur="emailBlur = true;" />
            <div ng-messages="registrationForm.email.$error" ng-messages-include="/templates/messages.html" ng-show="emailBlur"></div>
            <div class="error-placeholder" ng-hide="emailBlur"></div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" ng-model="registration.user.password" required ng-minlength="6" ng-maxlength="30" ng-blur="passwordBlur = true" />
            <div ng-messages="registrationForm.password.$error" ng-messages-include="/templates/messages.html" ng-show="passwordBlur"></div>
            <div class="error-placeholder" ng-hide="passwordBlur"></div>

        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" name="password_confirmation" class="form-control" 
                   ng-model="registration.user.password_confirmation" 
                   required compare-to="registration.user.password"
                   ng-blur="passwordConfBlur = true" />
            <div ng-messages="registrationForm.password_confirmation.$error" ng-messages-include="/templates/messages.html" ng-show="passwordConfBlur"></div>
            <div class="error-placeholder" ng-hide="passwordConfBlur"></div>
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-oogway btn-lg" ng-disabled="registrationForm.$invalid">Sign Up!</button>
        </div>
    </form> 
  </div>









                  </div>
                  </div>
              </div>
          </div>
      </div>
  </header>
</div>










































