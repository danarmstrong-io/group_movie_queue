<div class="col-md-12">
  <div class="block">
    <h2>Information</h2>
    <div class="listview">
      <div class="media">
        <div class="pull-left hidden-xs hidden-sm">
          <info-poster-image source="selectedMovie.poster"></info-poster-image>
        </div>
        <div class="media-body">
          <header class="p-header">
            <h2 class="p-title">{{selectedMovie.title}} ({{selectedMovie.year}})</h2>
          </header>
          <span>{{selectedMovie.rated}} | {{selectedMovie.runtime}} | {{genresString(selectedMovie)}} | {{selectedMovie.released | date}}</span>
          <hr>
          {{selectedMovie.plot}}
          <hr>
          Director: {{selectedMovie.director}}
          <br>
          Writers: {{selectedMovie.writer}}
          <br>
          Stars: {{selectedMovie.actors}}
        </div>
        <br><br>
      <button class="btn btn-oogway btn-lg btn-watched" ng-confirm-click="Are you sure you want to mark this as watched?" ng-click="setCurrentMovieAsWatched()">We Watched This</button>

      </div>
    </div>
  </div>
</div>